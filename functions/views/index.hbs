<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="style.css">
    <title>All Assets</title>
</head>
<body>
    <div class="headerBar">
        <h1 class="center">Portfolio</h1>
        <div class="refresh">refresh</div>
    </div>
    <table id="assetList">
        <thead>
            <th>Symbol</th>
            <th>Price</th>
            <th>Price Paid</th>
            <th>Quantity</th>
            <th>Cost Basis</th>
            <th>Market Value</th>
            <th>Total Growth</th>
            <th>Total Gain</th>
            <th>Today %</th>
            <th>Gain 24h</th>
        </thead>
        <script type="text/javascript">
            let costBasis, marketValue, totalGrowth, totalGain, todayPercent, todayGain;
            let row = document.querySelector('#assetList');
            let assets = {};
            let id = 0;
        </script>
        {{#each asset}}
            <script type="text/javascript">
                assets.id = {
                    costBasis : `${parseFloat({{{quantity}}} * {{{purchasePrice}}})}`,
                    marketValue : `${parseFloat({{{quantity}}} * {{{price}}})}`,
                    todayPercent : `${parseFloat({{{priceChangePercent}}})}`,
                    todayGain : {{{priceChange}}}
                };
                assets.id.totalGrowth = `${(assets.id.marketValue/assets.id.costBasis)*100}`;
                assets.id.totalGain = `${assets.id.marketValue - assets.id.costBasis}`;

                row.innerHTML += `<tr>
                    <td><a>{{{symbol}}}</a></td>
                    <td>${{{price}}}</td>
                    <td>${{{purchasePrice}}}</td>
                    <td>{{{quantity}}}</td>
                    <td>$${parseFloat(assets.id.costBasis).toFixed(2).replace(/(\d)(?=(\d{3})+\.)/g, '$1,')}</td>
                    <td>$${parseFloat(assets.id.marketValue).toFixed(2).replace(/(\d)(?=(\d{3})+\.)/g, '$1,')}</td>
                    <td>${parseFloat(assets.id.totalGrowth).toFixed(2)-1}%</td>
                    <td>$${parseFloat(assets.id.totalGain).toFixed(2).replace(/(\d)(?=(\d{3})+\.)/g, '$1,')}</td>
                    <td>${parseFloat(assets.id.todayPercent)}%</td>
                    <td>$${parseFloat(assets.id.todayGain)}</td>
                </tr>`;
                id++;
            </script>
        {{/each}}
    </table>
    <div class="addNew"><a>Add New test</a></div>
    <nav>
        <a>All Assets</a>
        <a href="/new">Add New</a>
    </nav>
    <script src="js/app.js"></script>
</body>
</html>
